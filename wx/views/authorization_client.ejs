                            }

                        })
                    })
                }
                // 拉去用户信息
            let getUserInfo = (tokenObj) => {

                return new Promise((resolve, reject) => {
                    $.ajax({
                        url: `https://api.weixin.qq.com/sns/userinfo?access_token=${tokenObj.access_token}&openid=${tokenObj.openid}&lang=zh_CN`,
